<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".LoginActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FF9999"
    android:weightSum="1">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iviLogo"
        android:src="@drawable/logo"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButtonLogin"
            android:src="@drawable/ingresar"
            android:padding="5dp"
            android:background="@drawable/round_corner"
            android:layout_margin="@dimen/abc_button_padding_horizontal_material" />
        <ImageButton

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButtonRegistro"
            android:src="@drawable/crear_cuenta"
            android:padding="5dp"
            android:background="@drawable/round_corner"
            android:layout_margin="@dimen/abc_button_padding_horizontal_material" />

        <com.facebook.login.widget.LoginButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButtonLoginFB"
           />

<!--
android:layout_margin="@dimen/abc_button_padding_horizontal_material"
android:src="@drawable/but_login"
            android:background="#FF9999"-->
    </LinearLayout>

    <TextSwitcher
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textSwitcher"
        android:layout_gravity="right" />


</LinearLayout>
